@model MovieGenreViewModel
@*@model IEnumerable<WebApplication3.Models.Movie>*@

@{
    ViewData["Title"] = "Index";
}
<div class="alert alert-primary">
    <div class="container">
        <h1>Movie Catalogue</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <form asp-controller="Movies" asp-action="Index" method="get">
            <p>
                <div class="mt-3 pt-3">
                    <dl class="row">
                        <dd class="mx-3 mt-2">
                            <select asp-for="MovieGenre" asp-items="Model.Genres">
                                <option value="">All</option>
                            </select>
                        </dd>
                        <dd class="mx-3 mt-1">
                            Title: <input type="text" name="SearchString" />
                        </dd>
                        <dd class="mx-2 mt-1">
                            Min Price: <input type="text" name="MinPrice" />
                        </dd>
                        <dd class="mx-2 mt-1">
                            Max  Price: <input type="text" name="MaxPrice" />
                        </dd>
                        <dd class="mx-3">
                            <input type="submit" class="btn btn-primary btn-outline-primary" value="Filter" />
                        </dd>
                    </dl>
                </div>
            </p>
        </form>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Title)
                    @*@Html.DisplayNameFor(model => model.Title)*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
                    @*@Html.DisplayNameFor(model => model.ReleaseDate)*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Genre)
                    @*@Html.DisplayNameFor(model => model.Genre)*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Price)
                    @*@Html.DisplayNameFor(model => model.Price)*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Rating)
                    @*@Html.DisplayNameFor(model => model.Rating)*@
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        <div class="btn-group">
                                <a class="btn btn-light text-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-light" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-light text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
